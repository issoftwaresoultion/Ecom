@model List<Ecommerce.DbEntity.staticpage>

<div class="panel panel-default" id="accordian">
    @foreach(var x in Model)
    {
  
    <div class="panel-heading" role="tab" id="headingOne-@x.id" onclick="ShowSeleted(@x.id)">
      <h4 class="panel-title">
        <a  href="Javascript:void(0)">
          @Html.Raw(x.Heading)
        </a>
      </h4>
    </div>
    <div id="collapseOne-@x.id" class="panel-collapse">
      <div class="panel-body" style="word-wrap: break-word;">
        @Html.Raw(x.Content)
      </div>
    </div>
  
    }
    </div>
  <script>
      $(document).ready(function () {
          hideAll();
      })
      function hideAll() {
          $('#accordian').find(".panel-collapse").each(function () {
              $(this).hide();
          });
      }
      function ShowSeleted(e) {
          hideAll();
          $('#collapseOne-'+e).show();
      }
  </script>


