@model Ecommerce.Model.LoginModel 
          
           <div id="messageEmailSuccess" style="color:red;">&nbsp;</div>
@using (Ajax.BeginForm("SendEmailForgotPassword", "FrontBase",
            new AjaxOptions
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "messageEmailSuccess",
                OnBegin = "showloader",
                OnComplete = "hideloader"

            }))
 { 
                            
                            @Html.TextBoxFor(m=>m.EmailForgotPassword, new {size=30 ,@placeholder="Email Address"})
   
                            <div id="ErrorForgotPassord">&nbsp; @Html.ValidationMessageFor(m => m.EmailForgotPassword)&nbsp;</div>
       
                             <input type="submit" class="btn btn-primary btn-sm" value="Submit"/>
}

<script type="text/javascript">
function showloader()
{
$('#page_loader').show();
}

function hideloader()
{
$('#page_loader').hide();
}
    </script>

