@model Ecommerce.Model.LoginModel 
<h4 style="color: black;"><span style="color:#fd638f">Login</span> to use your saved details <span style="font-size:8pt">(Fields (*) marked are required.)</span></h4>
@using (Html.BeginForm("Valdate", "Checkout"))
{
    <div class="row">
         <div class="col-lg-5">
    <div class="form-group">
        <label>Email Address<span style="color:#fd638f">*</span></label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm", @placeholder = "Email" })
        <span>&nbsp;
                @Html.ValidationMessageFor(m => m.Email)
        </span>
    </div>
             </div>
         <div class="col-lg-5">
    <div class="form-group">
        <label>Password<span style="color:#fd638f">*</span></label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm", @placeholder = "Password" })
        <span>&nbsp;
            @Html.ValidationMessageFor(m => m.Password)
        </span>
    </div>
             </div>
        <div class="col-lg-2" style="margin-top: 4%;">
            <button type="submit" class="btn btn-primary btn-sm">Log In</button>
            </div>
        </div>
    <div style="color: red">
        &nbsp;
        @if (TempData["ErrorMessage"] != null)
        {
            @Html.Raw(TempData["ErrorMessage"].ToString())
        }

    </div>
   
}
