@model Ecommerce.Model.DeliveryModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @if (TempData["message"] != null)
        {
        <div class="panel panel-info" id="infoPannal">
            <div class="panel-heading">
                Info
            </div>
            <div class="panel-body">
                @Html.Raw(TempData["message"].ToString())
                </div>
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Delivery Charges
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Save", "Delivery"))
                        {
                <div class="row">
                    <div class="col-lg-5">
                        <div class="form-group">
                            <label>DeliveryChargesDoller</label>
                            @Html.TextBoxFor(m => m.deliveryDoller, new { @class = "form-control", maxlength = "100" })
                          
                        </div>
                        <div class="form-group">
                            <label>DeliveryChargesPound</label>
                            @Html.TextBoxFor(m => m.deliveryPound, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>DeliveryChargesEuro </label>
                            @Html.TextBoxFor(m => m.deliveryEuro, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>DeliveryChargesNigria</label>
                            @Html.TextBoxFor(m => m.deliveryNigria, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>DeliveryChargesAngola</label>
                            @Html.TextBoxFor(m => m.deliveryAngola, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>DeliveryChargesGhana</label>
                            @Html.TextBoxFor(m => m.deliveryGhana, new { @class = "form-control", maxlength = "100" })
                        </div>
                        </div>
                    <div class="col-lg-5">
                        <div class="form-group">
                            <label>FreeDeliveryChargesDoller</label>
                            @Html.TextBoxFor(m => m.freeDeliveryAmountDoller, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>FreeDeliveryChargesPound</label>
                            @Html.TextBoxFor(m => m.freeDeliveryAmountPound, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>FreeDeliveryChargesEuro</label>
                            @Html.TextBoxFor(m => m.freeDeliveryAmountEuro, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>FreeDeliveryChargesNigria</label>
                            @Html.TextBoxFor(m => m.freeDeliveryAmountNigria, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>FreeDeliveryChargesAngola</label>
                            @Html.TextBoxFor(m => m.freeDeliveryAmountAngola, new { @class = "form-control", maxlength = "100" })
                        </div>
                        <div class="form-group">
                            <label>FreeDeliveryChargesGhana</label>
                            @Html.TextBoxFor(m => m.freeDeliveryAmountGhana, new { @class = "form-control", maxlength = "100" })
                        </div>
                        
                        <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                        </div>
                    </div>
                </div>
                    @Html.HiddenFor(m=>m.id)
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(HideInfo, 3500);
    });
    function HideInfo() {
        $("#infoPannal").hide();
    }
</script>
    
