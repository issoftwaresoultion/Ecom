@model Ecommerce.DbEntity.deliveryday 
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @if (TempData["message"] != null)
        {
            <div class="panel panel-info" id="infoPannal">
                <div class="panel-heading">
                    Info
                </div>
                <div class="panel-body">
                    @Html.Raw(TempData["message"].ToString())
                </div>
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Delivery Days
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Save", "DeliveryDays"))
                {
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label>DeliveryChargesDoller</label>
                                @Html.TextBoxFor(m => m.days, new { @class = "form-control", maxlength = "100" })

                            </div>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>

                    </div>
             
                    @Html.HiddenFor(m => m.id)
                }
            </div>
        </div>
    </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            setTimeout(HideInfo, 3500);
        });
        function HideInfo() {
            $("#infoPannal").hide();
        }
    </script>
