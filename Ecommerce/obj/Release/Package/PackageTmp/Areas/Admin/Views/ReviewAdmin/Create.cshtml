@model Ecommerce.Model.ReviewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @if (TempData["message"] != null)
        {
        <div class="panel panel-info" id="infoPannal">
            <div class="panel-heading">
                Info
            </div>
            <div class="panel-body">
                @Html.Raw(TempData["message"].ToString())
                </div>
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Length
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Save", "ReviewAdmin"))
                        {
                <div class="row">
                    <div class="col-lg-10">
                        <div class="form-group">
                            <label>Message</label>
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", maxlength = "250" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>

                        <div class="form-group">
                            <label>Rating</label>
                         @Html.DropDownListFor(m => m.Rating,
                                     new SelectList(ViewBag.list, "key", "value"), new { @class = "form-control" })
                        <div class="form-group">
                            <label>Active</label>
                            @Html.CheckBoxFor(m=>m.active)
                        </div>

                      
                        <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                        </div>
                    </div>
                </div>
                    @Html.HiddenFor(m=>m.id)
                    @Html.HiddenFor(m=>m.ProductId)

                </div>
                }
            
                    
        </div>
    </div>
</div>
                    </div>
<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(HideInfo, 3500);
    });
    function HideInfo() {
        $("#infoPannal").hide();
    }
</script>
    
