@model Ecommerce.Model.ColorModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @if (TempData["message"] != null)
        {
        <div class="panel panel-info" id="infoPannal">
            <div class="panel-heading">
                Info
            </div>
            <div class="panel-body">
                @Html.Raw(TempData["message"].ToString())
                </div>
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-heading">
                Add new color
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Save", "Color"))
                        {
                <div class="row">
                    <div class="col-lg-10">
                        <div class="form-group">
                            <label>Value</label>
                            @Html.TextBoxFor(m => m.name, new { @class = "form-control", maxlength = "100" })
                            @Html.ValidationMessageFor(m => m.name)
                        </div>
                        <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                        </div>
                    </div>
                </div>
                    @Html.HiddenFor(m=>m.id)
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(HideInfo, 3500);
    });
    function HideInfo() {
        $("#infoPannal").hide();
    }
</script>
    
