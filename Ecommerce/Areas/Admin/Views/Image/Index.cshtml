@model List<Ecommerce.Model.ImagesModel>
@{

    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
    string cssclass = "gradeA odd";
}
<link href="../../../../Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="../../../../Content/css/dataTables.responsive.css" rel="stylesheet" />
<script src="../../../../Scripts/Datatable/jquery.dataTables.js"></script>
<script src="../../../../Scripts/Datatable/dataTables.bootstrap.js"></script>

@if (Model.Count() > 0)
{
    if (TempData["message"] != null)
        {
        <div class="panel panel-info" id="infoPannal">
            <div class="panel-heading">
                Info
            </div>
            <div class="panel-body">
                @Html.Raw(TempData["message"].ToString())
                </div>
            </div>
        }
    <div class="panel panel-default">
        <div class="panel-heading">
             <div class="row">
          <div class="col-sm-6"> <strong> Images</strong></div>
                 </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                      
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                         <th  tabindex="0" aria-controls="dataTables-example" width="60%" >Image</th>
                                        <th  tabindex="0" aria-controls="dataTables-example" width="20%" >Type</th>
                                        <th  tabindex="0" aria-controls="dataTables-example" width="20%" >Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                        if (i % 2 == 0)
                                        {
                                            cssclass = "gradeA even";
                                        } 
                                    <tr class="@cssclass" role="row">
                                        <td class=""><img src="/img/@Model[i].image" width="450px" alt="No image avaliable"/></td>
                                        <td class="">@Model[i].Type</td>
                                       
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", "Image", new {id=Model[i].id }, new { @class = "btn btn-success" })&nbsp;
                                        </td>
                                    </tr>
                                    }
                                     
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                 
                </div>
            </div>

        </div>
        <!-- /.panel-body -->
    </div>
    
 
}

<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(HideInfo, 3500);
    });
    function HideInfo() {
        $("#infoPannal").hide();
    }
</script>
