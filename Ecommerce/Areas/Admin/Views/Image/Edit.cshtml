@model Ecommerce.Model.ImagesModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @if (TempData["message"] != null)
        {
        <div class="panel panel-info" id="infoPannal">
            <div class="panel-heading">
                Info
            </div>
            <div class="panel-body">
                @Html.Raw(TempData["message"].ToString())
                </div>
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-heading">
                Update Image
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Save", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                <div class="row">
                    <div class="col-lg-10">
                        <div class="form-group">
                            <label>Image</label>
                           <input type="file" name="image"/>
                            <br />
                            <label>
                              @Html.Raw(ViewBag.imageSize)
                            </label>
                        </div>
                        <div class="form-group">
                            <img src="/img/@Model.image" alt="No image avaliable"/>
                            </div>
                        <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                        </div>
                    </div>
                </div>
                    @Html.HiddenFor(m=>m.id)
                      @Html.HiddenFor(m=>m.Type)
                }
            </div>
        </div>
    </div>
</div>

    
